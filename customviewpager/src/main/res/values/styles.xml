<resources>

    <!-- Library theme. -->

    <style name="CustomViewPager">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="IndicatorsContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:paddingBottom">@dimen/indicator_vertical_padding</item>
        <item name="android:paddingTop">@dimen/indicator_vertical_padding</item>
        <item name="android:scrollbars">none</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CustomIndicator">
        <item name="android:layout_width">@dimen/indicator_item_size</item>
        <item name="android:layout_height">@dimen/indicator_item_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/indicator_item_padding</item>
        <item name="android:src">@drawable/ic_indicator</item>
    </style>

</resources>
